#include <bits/stdc++.h>
using namespace std;


int main() {
    vector<long long int>a,l,r;
    long long int t,n,p,q,i,ans,x;
    
    cin>>t;
    while(t--)
    {
        cin>>n;
        for(i=0;i<n;i++)
        {
        cin>>x;
        a.push_back(x);
        }
        l.push_back(a[0]);
        for(i=1;i<n;i++)
        {
            l.push_back(min(l[i-1],a[i]));
            
            
        }
        for(i=0;i<n;i++)
        r.push_back(0);
        r[n-1]=a[n-1];
        for(i=n-2;i>=0;i--)
        {
            r[i]=max(r[i+1],a[i]);
        }
        p=0;
        q=0;
        ans=-1;
        while((p<n)&&(q<n))
        {
            if(l[p]<=r[q])
            {
                ans=max(ans,q-p);
                q++;
            }
            else p++;
        }
        cout<<ans<<endl;
        a.clear();
        l.clear();
        r.clear();
    }
	
	return 0;
}
